---
/**
 * SheetClose - Label pour fermer le sheet (Pure CSS)
 * 
 * @param {string} htmlFor - ID du checkbox (doit correspondre à Sheet.id)
 * @param {string} className - Classes CSS supplémentaires
 */

interface Props {
  htmlFor: string;
  className?: string;
  [key: string]: any;
}

const {
  htmlFor,
  className = '',
  ...htmlAttributes
} = Astro.props as Props;

const classes = [
  'sheet-close',
  className,
].filter(Boolean).join(' ');
---


<label for={htmlFor} class={['sheet-close', 'button', 'initial', className].filter(Boolean).join(' ')} tabindex="0" role="button" aria-label="Close sheet" {...htmlAttributes}>
  <slot />
</label>

<style>
  .sheet-close {
    cursor: pointer;
    display: inline-block;
  }
</style>
