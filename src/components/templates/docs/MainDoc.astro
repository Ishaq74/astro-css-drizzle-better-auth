---
interface Props {
  variant?: 'initial' | 'retro' | 'modern' | 'futuristic';
}

const { variant = 'initial' } = Astro.props;
---

<article class={`doc-main variant-${variant}`}>
  <slot />
</article>

<style>
  .doc-main {
    min-width: 0;
    max-width: 800px;
  }

  .doc-main :global(h1) {
    font-size: 2.5rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--heading-color);
  }

  .doc-main :global(h2) {
    font-size: 1.75rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-default);
    scroll-margin-top: 2rem;
  }

  .doc-main :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    scroll-margin-top: 2rem;
  }

  .doc-main :global(p) {
    line-height: 1.75;
    margin-bottom: 1.25rem;
    color: var(--text-default);
  }

  .doc-main :global(code) {
    font-family: var(--font-family-mono);
    font-size: 0.875em;
    padding: 0.125em 0.375em;
    background: var(--bg-subtle);
    border-radius: var(--border-radius-sm);
    color: var(--color-accent);
  }

  .doc-main :global(pre) {
    background: var(--bg-inset);
    padding: 1.5rem;
    border-radius: var(--border-radius-md);
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border-default);
  }

  .doc-main :global(pre code) {
    background: none;
    padding: 0;
    color: var(--text-default);
  }

  .doc-main :global(table) {
    margin: 1.5rem 0;
  }
</style>
